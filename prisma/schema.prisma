generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

enum Role {
  CLIENT
  EMPLOYEE
  DELIVERY
  MANAGER
  BOSS
}

model User {
  userId        Int    @id @default(autoincrement())
  createdAt DateTime @default(now())

  email         String @unique
  passwordHash  String
  loyaltyPoints Int    @default(0)
  role Role @default(CLIENT)

  managedRestaurants Restaurant[]
}

model Restaurant {
  restaurantId Int @id @default(autoincrement())

  managerId Int
  manager User @relation(fields: [managerId], references: [userId])
}
